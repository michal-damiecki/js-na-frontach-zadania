{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["es6"],
    "module": "commonjs",
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "src",
    "outDir": "dist",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "moduleResolution": "Node"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
